<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record model="ir.ui.view" id="view_account_invoice_extended_for_multi_branch">
        <field name="name">account.move.for.operating.branch.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='invoice_partner_bank_id']" position="after">
                <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
            </xpath>
            
        </field>
    </record>
    <record id="search_view_account_invoice_for_operating_branch" model="ir.ui.view">
        <field name="name">invoice Branch Search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <separator/>
                <field name="operating_branch_id"/> 
                <filter name="operating_branch_id" string="Branch is set" domain="[('operating_branch_id','!=',False)]"/>
                <filter name="operating_branch_id" string="Branch isn't set" domain="[('operating_branch_id','=',False)]"/>
           <!--  </xpath>
            <xpath expr="//filter[@name='duedate']" position="after"> -->
                    <filter name="operating_branch_id" string="Branch" context="{'group_by':'operating_branch_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_tree_view_extended_for_operating_branch" model="ir.ui.view">
        <field name="name">invoice.order.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
            </field>
        </field>
    </record>
    <!-- <record id="view_vendor_invoice_tree_view_extended_for_operating_branch" model="ir.ui.view">
        <field name="name">vendor.order.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.move_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
            </field>
        </field>
    </record> -->
</odoo>
