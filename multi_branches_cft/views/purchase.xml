<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record model="ir.ui.view" id="view_purchase_order_extended_for_multi_branch">
        <field name="name">purchase.order.for.operating.branch.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="inside">
                <separator string="Operating Branch" groups="multi_branches_cft.group_multi_branch"/>
                <group>
                    <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
                </group>
            </xpath> 
        </field>
    </record> 
    <record id="search_view_purchase_order_for_operating_branch" model="ir.ui.view">
        <field name="name">purchase Branch Search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <separator/>
                <field name="operating_branch_id"/> 
                <filter name="operating_branch_id" string="Branch is set" domain="[('operating_branch_id','!=',False)]"/>
                <filter name="operating_branch_id" string="Branch isn't set" domain="[('operating_branch_id','=',False)]"/>
            </xpath>
            <xpath expr="//filter[@name='vendor']" position="after">
                    <filter name="operating_branch_id" string="Branch" context="{'group_by':'operating_branch_id'}"/>
            </xpath>
        </field>
    </record>
    <record id="view_purchase_order_tree_view_extended_for_operating_branch" model="ir.ui.view">
        <field name="name">purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_status" position="after">
                <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
            </field>
        </field>
    </record>
</odoo>
