<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_multi_branches_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='general_settings']" position="inside">
                    <h2 class="mt32">Operating Branch</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Manage multiple Branches of your company.">
                            <div class="o_setting_left_pane">
                                <field name="group_multi_branch"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_multi_branch"/>
                                <div class="text-muted">
                                    Track branches of your company
                                </div>
                                <div class="content-group">
                                    <div class="mt16" attrs="{'invisible': [('group_multi_branch', '=', False)]}">
                                         <button name="%(multi_branches_cft.action_operating_branches_form)d" icon="fa-arrow-right" type="action" string="Branches" class="btn-link"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
