<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record model="ir.ui.view" id="view_sale_order_extended_for_multi_branch">
        <field name="name">sale.order.for.operating.branch.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']/group" position="inside">
                <group string="Operating Branch" groups="multi_branches_cft.group_multi_branch">
                    <field name="operating_branch_id"/>
                </group>
            </xpath>
        </field>
    </record> 
    <record id="search_view_sale_order_for_operating_branch" model="ir.ui.view">
        <field name="name">sale Branch Search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <separator/>
                <field name="operating_branch_id"/> 
                <filter name="operating_branch_id" string="Branch is set" domain="[('operating_branch_id','!=',False)]"/>
                <filter name="operating_branch_id" string="Branch isn't set" domain="[('operating_branch_id','=',False)]"/>
            </xpath>
            <xpath expr="//filter[@name='salesperson']" position="after">
                    <filter name="operating_branch_id" string="Branch" context="{'group_by':'operating_branch_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_tree_view_extended_for_operating_branch" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
            </field>
        </field>
    </record>

    <record id="view_sale_order_tree_view_extended_for_operating_branch" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="operating_branch_id" groups="multi_branches_cft.group_multi_branch"/>
            </field>
        </field>
    </record>
</odoo>
